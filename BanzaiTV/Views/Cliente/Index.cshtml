@model List<ClienteModel>
<div class="container">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-dark" role="button" asp-area="" asp-controller="Cliente" asp-action="Cadastrar">Cadastrar cliente</a>
    </div>
    <br />
    <div class="card">

        <div class="card-header">
            <h4>Lista de clientes</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Cliente</th>
                        <th scope="col">Plano</th>
                        <th scope="col">Dia do vencimento</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model != null && Model.Any())
                    {
                        foreach(ClienteModel cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Nome</td>
                                <td>@cliente.Plano.Titulo</td>
                                <td>@cliente.DiaVencimento.ToString("D2")</td>
                                <td>
                                    <div>
                                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="Ver cadastro" role="button" class="me-2" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="VerMais"><i class="fa-solid fa-circle-info"></i></a>
                                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="Editar" role="button" class="me-2" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="Editar"><i class="fa-solid fa-square-pen"></i></a>
                                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="Excluir" role="button" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="ConfirmaExcluir"><i class="fa-solid fa-square-xmark"></i></a>
                                    </div>

                            </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>

    </div>

</div>


