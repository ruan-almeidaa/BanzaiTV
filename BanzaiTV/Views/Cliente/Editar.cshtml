@model BanzaiTV.ViewModel.ClienteViewModel

<div class="container">

    <div class="card">

        <div class="card-header">
            <h4>Editar cliente</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Cliente" asp-action="Editar" method="post">
                <input type="hidden" asp-for"id"/>
                <div class="row">
                    <div class="col align-content-center">
                        <div class="form-check mb-3">
                            <input asp-for="Ativo" class="form-check-input" type="checkbox" id="ativo">
                            <label class="form-check-label" for="ativo">
                                Cliente ativo
                            </label>
                        </div>
                    </div>

                    <div class="col">
                        <label for="diaVencimento" class="form-label">Dia do vencimento:</label>
                        <select asp-for="DiaVencimento" id="diaVencimento" class="form-select form-select-sm" aria-label=".form-select-sm example" value="@Model.DiaVencimento.ToString()">
                            @for (int dia = 1; dia <= 29; dia++)
                            {
                                <option value="@dia.ToString()">@dia.ToString("D2")</option>
                            }
                        </select>
                    </div>

                    <div class="col">
                        <label for="plano" class="form-label">Plano:</label>
                        <select asp-for="PlanoId" id="plano" class="form-select form-select-sm" aria-label=".form-select-sm example">
                            @foreach (PlanoModel plano in Model.ListaDePlanos)
                            {
                                <option value="@plano.Id">@plano.Titulo</option>
                            }
                        </select>
                    </div>


                </div>
                <hr />
                <div class="row">
                    <div class="col mb-3">
                        <label for="nome" class="form-label">Nome Completo *</label>
                        <input type="text" asp-for="Nome" class="form-control" id="nome" required>
                    </div>
                    <div class="col mb-3">
                        <label for="exampleInputEmail1" class="form-label">CPF</label>
                        <input type="text" asp-for="Cpf" class="form-control" id="cpf" aria-describedby="">
                    </div>
                </div>

                <div class="row">
                    <div class="col mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" asp-for="Email" class="form-control" id="email" aria-describedby="emailHelp">
                    </div>

                    <div class="col mb-3">
                        <label for="celular" class="form-label">Celular</label>
                        <input type="tel" asp-for="Celular" class="form-control" id="celular" aria-describedby="">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Salvar</button>
                <a href="/Cliente" class="btn btn-danger">Cancelar</a>
            </form>
        </div>

    </div>

</div>


