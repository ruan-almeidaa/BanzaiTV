@model ClienteModel

<div class="container">

    <div class="card">

        <div class="card-header">
            <h2>Cadastro de cliente</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Cliente" asp-action="Cadastrar" method="post">
                <div class="row">
                    <div class="col align-content-center">
                        <div class="form-check mb-3">
                            <input asp-for="Ativo" class="form-check-input" type="checkbox" value="" id="ativo" checked>
                            <label class="form-check-label" for="ativo">
                                Cliente ativo
                            </label>
                        </div>
                    </div>

                    <div class="col">
                        <label for="diaVencimento" class="form-label">Dia do vencimento:</label>
                        <select asp-for ="DiaVencimento" id="diaVencimento" class="form-select form-select-sm" aria-label=".form-select-sm example">
                            <option value="1">01</option>
                            <option value="2">02</option>
                            <option value="3">03</option>
                            <option value="4">04</option>
                            <option value="5">05</option>
                            <option value="6">06</option>
                            <option value="7">07</option>
                            <option value="8">08</option>
                            <option value="9">09</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                            <option value="13">13</option>
                            <option value="14">14</option>
                            <option value="15">15</option>
                            <option value="16">16</option>
                            <option value="17">17</option>
                            <option value="18">18</option>
                            <option value="19">19</option>
                            <option value="20">20</option>
                            <option value="21">21</option>
                            <option value="22">22</option>
                            <option value="23">23</option>
                            <option value="24">24</option>
                            <option value="25">25</option>
                            <option value="26">26</option>
                            <option value="27">27</option>
                            <option value="28">28</option>
                            <option value="29">29</option>
                        </select>
                    </div>

                    <div class="col">
                        <label for="plano" class="form-label">Plano:</label>
                        <select asp-for="PlanoId" id="plano" class="form-select form-select-sm" aria-label=".form-select-sm example">
                            <option value="1">Mensal Flex</option>
                            <option value="2">Trimestral Total</option>
                            <option value="3">Semestral Premium</option>
                            <option value="4">Anual Master</option>
                        </select>
                    </div>


                </div>
                <hr />
                <div class="row">
                    <div class="col mb-3">
                        <label for="nome" class="form-label">Nome Completo *</label>
                        <input type="text" asp-for="Nome" class="form-control" id="nome" required>
                    </div>
                    <div class="col mb-3">
                        <label for="exampleInputEmail1" class="form-label">CPF</label>
                        <input type="text" asp-for="Cpf" class="form-control" id="cpf" aria-describedby="">
                    </div>
                </div>

                <div class="row">
                    <div class="col mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" asp-for="Email" class="form-control" id="email" aria-describedby="emailHelp">
                    </div>

                    <div class="col mb-3">
                        <label for="celular" class="form-label">Celular</label>
                        <input type="tel" asp-for="Celular" class="form-control" id="celular" aria-describedby="">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </form>
        </div>

    </div>

</div>


