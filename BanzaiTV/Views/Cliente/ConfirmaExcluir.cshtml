@model ClienteModel

    
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Exlcuir cliente</h5>
            </div>
            <div class="modal-body">
                <p>Confirma a exclusão do cliente <b>@Model.Nome</b>?</p>
            </div>
            <input readonly type="hidden" asp-for"id" />

            <div class="modal-footer">
                <a role="button" class="btn btn-danger" asp-controller="Cliente" asp-action="Excluir" asp-route-id="@Model.Id">Apagar</a>
                <a role="button" class="btn btn-primary" href="/Clientes">Voltar</a>
            </div>
        </div>
    </div>
