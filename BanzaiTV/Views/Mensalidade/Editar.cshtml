@model BanzaiTV.ViewModel.MensalidadeViewModel

<div class="container">

    <div class="card">

        <div class="card-header">
            <h2>Cadastro manual de mensalidade</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Mensalidade" asp-action="Editar" method="post">
                <input type="hidden" asp-for"id" />
                <hr />

                <div class="row">
                    <div class="col">
                        <label for="cliente" class="form-label">Cliente:*</label>
                        <select asp-for="ClienteId" id="cliente" class="form-select form-select-sm" aria-label=".form-select-sm example">
                            @foreach (ClienteModel cliente in Model.ListaDeClientes)
                            {
                                    <option value="@cliente.Id">@cliente.Nome</option>
                            }
                        </select>
                        </select>
                    </div>
                    <div class="col">
                        <label for="vencimento" class="form-label">Data de vencimento:*</label>
                        <div class="form" id="datepicker">
                            <input required asp-for="DataVencimento" type="date" class="form-control" id="vencimento" />
                        </div>
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col">
                        <label for="valor" class="form-label">Valor*</label>
                        <input required type="number" step="0.01" min="0.01" asp-for="Valor" class="form-control" id="valor">
                    </div>

                    <div class="col">
                        <label for="pagamento" class="form-label">Data do pagamento:</label>
                        <div class="form" id="datepicker">
                            <input data-bs-toggle="tooltip" data-bs-placement="top" title="Caso a mensalidade não tenha sido paga, deixar esse campo em branco!" asp-for="DataPagamento" type="date" class="form-control" id="pagamento" />
                        </div>
                    </div>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a href="/Mensalidade" class="btn btn-danger">Cancelar</a>
            </form>
        </div>

    </div>

</div>


