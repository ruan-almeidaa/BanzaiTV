@model List<PlanoModel>

<div class="container">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-dark" role="button" asp-area="" asp-controller="Plano" asp-action="Cadastrar">Cadastrar plano</a>
    </div>
    <br />
    <div class="card">

        <div class="card-header">
            <h4>Lista de planos</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Duração</th>
                        <th scope="col">Valor mensal</th>
                        <th scope="col"> </th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model != null && Model.Any())
                    {
                        int numeroLinha = 1;
                        foreach(PlanoModel plano in Model)
                        {
                            <tr>
                                <td>@numeroLinha</td>
                                <td>@plano.Titulo</td>
                                <td>@plano.MesesDuracao meses</td>
                                <td>R$ @plano.Valor</td>
                                <th>
                                    <div>
                                        <a role="button" class="btn btn-secondary btn-sm" asp-route-id="@plano.Id" asp-controller="Plano" asp-action="Editar"><i class="bi bi-pencil-square"></i> Editar</a>
                                        <a role="button" class="btn btn-danger btn-sm" asp-route-id="@plano.Id" asp-controller="Plano" asp-action="ConfirmaExcluir"><i class="bi bi-x-circle"></i> Excluir</a>
                                    </div>

                                </th>
                            </tr>
                            numeroLinha++;
                        }
                    }

                </tbody>
            </table>
        </div>

    </div>

</div>


